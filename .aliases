# vi: ft=zsh
[[ "$(command -v exa)" ]] && alias ls="exa -lah --icons"
[[ "$(command -v bat)" ]] && alias cat="bat"
[[ "$(command -v nvim)" ]] && alias vim="nvim"
alias e=vim

## Git aliases
alias gap="git add -p"
alias gst="git status"
alias gsw="git switch"
alias gcm="git commit -m"
alias grb="git rebase -i"

